# HAI V2 Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (REQUIRED)
# Example: postgresql://username:password@hostname:port/database_name
# For local PostgreSQL: postgresql://postgres:password@localhost:5432/hai_database
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Security Configuration (REQUIRED)
# Generate a strong secret key for Flask sessions
SECRET_KEY=your_secret_key_here

# Cloud Storage Configuration (OPTIONAL)
# Required only if you want S3 backup functionality
# The application will work without these, storing files locally only
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region  
CLOUD_STORAGE_BUCKET=your_s3_bucket_name

# Deployment Configuration (OPTIONAL)
# PORT is automatically set by most cloud platforms
# PORT=5001
